<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.lambdaspectrogram.HomeFragment">
<LinearLayout android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Tone Training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/homeScreenHeader" android:textSize="36sp"
            android:textAlignment="center" android:layout_marginTop="100dp" android:layout_marginBottom="60dp"/>
    <Button
            android:text="Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playGameButton"
            android:gravity="center_horizontal"
            android:layout_gravity="center" android:clickable="false" android:enabled="false"/>
    <TextView
            android:text="Loading: please wait..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/loadingInfo" android:gravity="center"
            tools:text="Loading, please wait..." android:textSize="24sp" android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"/>
</LinearLayout>
</layout>