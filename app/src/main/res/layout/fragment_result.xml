<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.lambdaspectrogram.ResultFragment">
<LinearLayout android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="Score: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreTextView"
            android:gravity="center" android:layout_marginTop="200dp" android:textSize="36sp"
            android:layout_gravity="center" android:layout_marginBottom="200dp"/>
    <Button
            android:text="Play Again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playAgainButton"
            android:layout_gravity="center"/>
</LinearLayout>
</layout>